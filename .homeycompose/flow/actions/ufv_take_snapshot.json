{
  "id": "ufv_take_snapshot",
  "title": {
    "en": "Take a snapshot",
    "nl": "Maak een momentopname"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=camera"
    },
    {
      "name": "width",
      "type": "number",
      "min": 0,
      "max": 1920,
      "placeholder": {
        "en": "Width in pixels",
        "nl": "Breedte in pixels"
      }
    }
  ]
}